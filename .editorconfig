root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.mak]
indent_style = tab

# Don't accidentally mess up our syntax tests.
[tests/syntax/*/*.zn]
end_of_line = unset
charset = unset
trim_trailing_whitespace = false
insert_final_newline = false
